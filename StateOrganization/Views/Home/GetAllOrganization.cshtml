@model List<StateInfo.Domain.DTOs.StateOrganizationAllDTO>



<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="/StateOrganization/@item.PhotoUrl" alt="Rasm" class="img-fluid rounded-start" style="height: 150px; width: 100%; object-fit: cover;" />
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">Shahar: <strong>@item.City</strong></p>
                            <p class="card-text"><small class="text-muted">Ish vaqti: 09:00 - 18:00</small></p>
                            <div class="d-flex">
                                <a href="@Url.Action("Details", "Home", new { id = item.Id })" class="btn btn-primary">Batafsil</a>
                                <a href="#" class="btn btn-danger ms-2">Qabulga yozilish</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

